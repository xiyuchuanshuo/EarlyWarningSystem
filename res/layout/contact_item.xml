<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	
    <RelativeLayout
        android:id="@+id/layout_contact_item_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_item_head_height"
        android:paddingLeft="@dimen/contact_edittext_margin"
        android:paddingRight="@dimen/contact_edittext_margin"
        android:background="@color/gray_light_2">
        <TextView
	        android:id="@+id/textview_contact_item_head"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textSize="@dimen/fontsize_14"
	        android:textColor="@color/gray_light_3"
	        />
    </RelativeLayout> 
     
    <RelativeLayout
        android:id="@+id/layout_contact_item"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/contact_item_height"
	    android:layout_below="@id/layout_contact_item_head">
	    
        <View 
	        android:id="@+id/view_contact_item_top_sep"
	        android:layout_width="match_parent"
	        android:layout_height="0.2dp"
	        android:layout_alignParentTop = "true" 
	        android:background="@color/white_light_2"
	        android:visibility="gone"/>

	    <TextView
	        android:id="@+id/contact_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textSize="@dimen/fontsize_16"
	        android:textColor="@color/black_light_2"
	        android:layout_marginLeft="@dimen/contact_edittext_margin"/>

	    <TextView
	        android:id="@+id/contact_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textSize="@dimen/fontsize_16"
	        android:textColor="@color/gray_light_3"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/contact_edittext_margin"/>

	    <View 
	        android:id="@+id/view_contact_item_bottom_sep"
	        android:layout_width="match_parent"
	        android:layout_height="0.2dp"
	        android:layout_alignParentBottom = "true" 
	        android:background="@color/white_light_2"
	        android:visibility="gone"/>
	    
    </RelativeLayout>
    
</RelativeLayout>