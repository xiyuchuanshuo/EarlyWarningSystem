<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/ly_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/date"
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:text="  06月  2011年"
                android:textSize="18sp"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ly_one"
            android:orientation="vertical" >

            <View
                android:id="@+id/view_one"
                android:layout_width="3dip"
                android:layout_height="15dip"
                android:layout_marginLeft="21dip"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/attend_date" />

            <View
                android:id="@+id/view_two"
                android:layout_width="3dip"
                android:layout_height="30dip"
                android:layout_marginLeft="21dip"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/lay_two"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="化学"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授课教师:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/teachername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="授课教师：邵利娟"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>